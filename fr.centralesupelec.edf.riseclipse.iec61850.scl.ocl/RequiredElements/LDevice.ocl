import scl: 'http://www.iec.ch/61850/2003/SCL'

package scl

context LDevice

    -- One LN0 is required
    inv LDevice_one_LN0_required
        ( 'LDevice shall contain one LN0 (line ' + self.lineNumber.toString() + ')' )
    :
        self.LN0 <> null


endpackage

