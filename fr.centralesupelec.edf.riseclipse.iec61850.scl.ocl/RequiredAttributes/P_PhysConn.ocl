import scl: 'http://www.iec.ch/61850/2003/SCL'

import '../Helpers/Enums.ocl'

package scl

context P_PhysConn
-- extends PAddr

    -- The type attribute shall be present
    inv P_PhysConn_type_required
        ( '[OCL validation] type attribute shall be present in P_PhysConn (line ' + self.lineNumber.toString() + ')' )
    :
        self.type <> null

    -- The P_PhysConn type value shall be valid
    inv P_PhysConn_type_valid
        ( '[OCL validation] type attribute shall start with a capital letter, and shall contain only alphanumeric characters in P_PhysConn (line ' + self.lineNumber.toString() + '). '
          + 'Current value is ' + self.type.toString()
        )
    :
        self.type <> null implies self.validSclPTypePhysConnEnum( type )


endpackage

